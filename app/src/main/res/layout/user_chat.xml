<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_user_chat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/user_chat_head" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/iv_user_chat"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_user_chat"
        android:padding="10dp"
        android:text="Adasdghgfad"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_toStartOf="@+id/iv_user_chat" />


</RelativeLayout>